{
  "watch": ["src", "env", "docs"],
  "ext": "ts,js,yaml,json",
  "ignore": ["src/**/*.test.ts", "dist", "node_modules"],
  "exec": "node -r ./env/config.js -r ts-node/register/transpile-only -r tsconfig-paths/register src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.dev.json"
  },
  "delay": 1000,
  "quiet": false,
  "verbose": false,
  "colours": true,
  "events": {
    "restart": "echo '\\n[nodemon] Restarting due to file changes...\\n'",
    "start": ""
  }
}
